course:
+ id
+ name
+ price
+ category
+ status // trạng thái khoá học, đã bắt đầu, chưa bắt đầu, đã hoàn thành, đang bảo lưu 

account: //chứa cả thông tin admin
+ id
+ userid
+ password
+ email
+ phoneNumber
+ role // quyền hạng ( admin, customer, staff,)

order:
+ id
+ userid
+ orderDetailId
+ totalPrice
+ status


OrderDetail:
+ id
+ courseId
+ orderId
+ Date
+ Deal
+ Description
+ Quantity
+ TotalAmount 
+ status //pending, paid, unpaid

Payment:
+ id
+ userID
+ payment_method// phuowng thuwcs thanh toan visa, mastercard
+ orderDetailId
+ amount
+ paymentDate
+ paymentStatus
